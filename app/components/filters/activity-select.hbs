<AuLabel for="filter-name">Selecteer hoofdactiviteit(en)</AuLabel>
<div class={{if @error "ember-power-select--error"}}>
  <PowerSelectMultiple
    @noMatchesMessage="Geen resultaten"
    @searchEnabled={{true}}
    @searchField="prefLabel"
    @placeholder="Selecteer een activiteit"
    @searchMessage="Typ om te zoeken"
    @options={{this.activities}}
    @selected={{@selected}}
    @onChange={{@onChange}}
    @triggerId={{@id}}
    as |activity|
  >
    {{activity.prefLabel}}
  </PowerSelectMultiple>
</div>