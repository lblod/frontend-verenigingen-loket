<AuFieldset class="au-u-margin-top" as |f|>
  <f.legend>
    Erkenning
  </f.legend>
  <f.content>
    <AuCheckboxGroup
      @name="recognition-status-filter"
      @selected={{@selected}}
      @onChange={{@onChange}}
      as |Group|
    >
      {{#each this.options as |option|}}
        <Group.Checkbox @value={{option}}>{{this.optionLabel
            option
          }}</Group.Checkbox>
      {{/each}}
    </AuCheckboxGroup>
  </f.content>
</AuFieldset>