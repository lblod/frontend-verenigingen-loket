<AuLabel class="au-u-margin-top" for="filter-municipality">Erkenning</AuLabel>
<AuCheckboxGroup
  @alignment="default"
  @selected={{this.selected}}
  @onChange={{this.onChange}}
  as |Group|
>
  {{#each this.organizationStatus as |status|}}
    {{#if (eq status.label "Erkend")}}
      <Group.Checkbox @value={{status.id}}>{{status.label}}</Group.Checkbox>
    {{else if (eq status.label "Niet erkend")}}
      <Group.Checkbox @value={{status.id}}>{{status.label}}</Group.Checkbox>
    {{/if}}
  {{/each}}
</AuCheckboxGroup>