<AuToolbar @size="medium" @skin="tint" @border="bottom" as |Group|>
  <Group>
    <ul class="au-c-list-horizontal au-c-list-horizontal--small">
      <li class="au-c-list-horizontal__item">
        <AuLinkExternal
          href="https://loket.lokaalbestuur.vlaanderen.be/"
          @icon="arrow-left"
          @iconAlignment="left"
        >
          Loket voor Lokale Besturen
        </AuLinkExternal>
      </li>
      {{#each this.crumbsForRoute as |crumb index|}}
        <li class="au-c-list-horizontal__item" role="menu">
          {{#if crumb.link}}
            <AuLink @route={{crumb.link}} role="menuitem">
              {{crumb.label}}
            </AuLink>
          {{else}}
            {{#if (last-index index this.crumbsForRoute)}}
              <strong role="menuitem">{{crumb.label}}</strong>
            {{else}}
              <p role="menuitem">{{crumb.label}}</p>
            {{/if}}
          {{/if}}
        </li>
      {{/each}}
    </ul>
  </Group>
</AuToolbar>