<AuDataTable
  @content={{this.getSites}}
  @isLoading={{this.showTableLoader}}
  as |t|
>
  <t.content class="au-c-data-table__table--small" as |c|>
    <c.header>
      <th width="80px" class="data-table__header-title "></th>
      <AuDataTableThSortable
        @field="locatie"
        @currentSorting={{this.sort}}
        @label="Locatie"
        @class="data-table__header-title"
      />
      <AuDataTableThSortable
        @field="type"
        @currentSorting={{this.sort}}
        @label="Type"
        @class="data-table__header-title"
      />
      <AuDataTableThSortable
        @field="beschrijving"
        @currentSorting={{this.sort}}
        @label="Beschrijving"
        @class="data-table__header-title"
      />
    </c.header>
    {{#if this.hasErrored}}
      <TableMessage::Error />
    {{else if this.hasNoResults}}
      <TableMessage>
        <p>
          Er werden geen zoekresultaten gevonden. Kijk na op spelfouten, of
          probeer een andere zoekopdracht. Indien een organisatie ontbreekt,
          meldt dit aan
          <a class="au-c-link" href="mailto:{{config 'contactEmail'}}">{{config
              "contactEmail"
            }}</a>
          of
          <AuLink @route="administrative-units.new">maak een organisatie aan.</AuLink>
        </p>
      </TableMessage>
    {{else}}
      <c.body as |site|>
        <td>
          {{#if site.address.isPrimary}}
            <div
              style="background-color: var(--au-blue-200); color: var(--au-blue-700); width: 25px; height:25px; border-radius: 50px; display:flex; align-items:center; justify-content:center;"
            >
              <svg viewBox="0 0 576 512" width="16" title="star">
                <path
                  fill="#0055CC"
                  d="M259.3 17.8L194 150.2 47.9 171.5c-26.2 3.8-36.7 36.1-17.7 54.6l105.7 103-25 145.5c-4.5 26.3 23.2 46 46.4 33.7L288 439.6l130.7 68.7c23.2 12.2 50.9-7.4 46.4-33.7l-25-145.5 105.7-103c19-18.5 8.5-50.8-17.7-54.6L382 150.2 316.7 17.8c-11.7-23.6-45.6-23.9-57.4 0z"
                />
              </svg>
            </div>
          {{/if}}
        </td>
        <td>

          {{this.combineFullAddress site.address}}
        </td>
        <td>
          {{site.siteType.label}}
        </td>
        <td>
          {{site.address.postcode}}
        </td>
      </c.body>
    {{/if}}
  </t.content>
</AuDataTable>