{{page-title "Verenigingen"}}

<AuApp>
  <Header />

  {{#if this.session.isAuthenticated}}
    <Shared::BreadCrumb />
    <AuMainContainer class="au-u-flex" as |m|>
      <m.content @scroll={{true}}>
        <AuBodyContainer>
          {{outlet}}
        </AuBodyContainer>
      </m.content>
    </AuMainContainer>
  {{else}}
    <div
      class="au-c-main-container__content au-c-main-container__content--scroll"
      id="content"
      tabindex="-1"
    >
      {{outlet}}
    </div>
  {{/if}}
</AuApp>
<AuModalContainer />
<AuToaster />